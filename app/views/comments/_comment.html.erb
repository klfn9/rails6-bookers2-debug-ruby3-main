<table>
      <tbody>
        <% comments.each do |comment| %>
        
      <tr>
        <td><%= comment.user.name %></td>
        <td><%= comment.comment %></td>
        <td><%= link_to "Destroy", book_comment_path(@book, comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %></td>
      </tr>
        <% end %>
      </tbody>
</table>